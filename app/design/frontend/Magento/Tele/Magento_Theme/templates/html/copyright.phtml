<script type="text/javascript">
    require([ 'jquery', 'jquery/ui'], function($){ 
        $(document).ready(function($) {
            var $window = $(window);
            function checkWidth() {
                var windowsize = $window.width();               
                var isMobile = (windowsize < 768) ? 1 : 0;
                var currentDevice =  $("#footer-default").attr("isMobile-data");
                if (currentDevice == "1") {
                    if (!isMobile) resetFooterSm();
                } else {
                    (isMobile) ? resetFooterXs(): resetFooterSm();
                }   
                $("#footer-default").attr("isMobile-data", isMobile);               
            }
            // Reset status begin mobile
            function resetFooterXs() {
                $(".ft-sub-item").css("display", "none");
                $('.click-ft-item').attr("check-data", "0");
            }
             // Reset status begin  # Mobile
            function resetFooterSm() {
                $(".ft-sub-item").css("display", "block");
                $('.click-ft-item').attr("check-data", "0");
            }
            // Check width begin first time
            checkWidth();
            $(window).resize(checkWidth);
            $('.click-ft-item').click(function(){  
                var curWidth = $window.width(); 
                if (curWidth < 768) {
                    var check = $(this).attr("check-data");
                    $(".ft-sub-item").css("display", "none");
                    if (check == "0") { 
                        $(this).parent().find('.ft-sub-item').css("display", "block");
                        $(this).attr("check-data", "1");
                    } else {
                        $(this).attr("check-data", "0");
                    }
                }
            });
        }); 
    });
</script>